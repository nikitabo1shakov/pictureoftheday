<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common parameters -->
    <style name="MyAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryVariant">?themeColorPrimaryVariant</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecondary">@color/color_gray</item>
        <item name="textColorConnected">@color/light_gray</item>
        <item name="textColorDisConnected">@color/light_gray</item>
    </style>
    <!-- Pink -->
    <style name="MyAppTheme.PinkTheme">
        <item name="colorPrimaryDark">@color/pink_dark</item>
        <item name="android:background">@color/pink</item>
        <item name="colorAccent">@color/pink_light</item>
        <item name="themeColorPrimary">@color/pink</item>
        <item name="themeColorPrimaryVariant">@color/pink_light</item>
    </style>
    <!-- Yellow -->
    <style name="MyAppTheme.YellowTheme">
        <item name="colorPrimaryDark">@color/gold</item>
        <item name="android:background">@color/gold</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="themeColorPrimary">@color/yellow</item>
        <item name="themeColorPrimaryVariant">@color/light_yellow</item>
    </style>
    <!-- Green -->
    <style name="MyAppTheme.GreenTheme">
        <item name="colorPrimaryDark">@color/lime</item>
        <item name="android:background">@color/pale_green</item>
        <item name="colorAccent">@color/lime</item>
        <item name="themeColorPrimary">@color/pale_green</item>
        <item name="themeColorPrimaryVariant">@color/light_green</item>
    </style>

    <!-- Base application theme example. -->
    <style name="AppThemeBase" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#212121</item>
    </style>
</resources>