<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Themes -->
    <!-- Indigo -->
    <style name="AppTheme.IndigoTheme">
        <item name="colorPrimaryDark">@color/dark_indigo</item>
        <item name="colorAccent">@color/violet</item>
        <item name="themeColorPrimary">@color/indigo</item>
    </style>
    <!-- Pink -->
    <style name="AppTheme.PinkTheme">
        <item name="colorPrimaryDark">@color/pink_dark</item>
        <item name="colorAccent">@color/pink_light</item>
        <item name="themeColorPrimary">@color/pink</item>
    </style>
    <!-- General -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecondary">@color/color_gray</item>
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/light_gray</item>
    </style>
    <!-- Attributes -->
    <attr name="textColorConnected" format="reference" />
    <attr name="textColorDisConnected" format="reference" />
    <attr name="themeColorPrimary" format="reference" />
    <attr name="textColorPrimary" format="reference" />
    <attr name="textColorSecondary" format="reference" />
</resources>